<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newsFeedFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.android.unewsapp.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/newsFeedFragment"
        android:name="com.example.android.unewsapp.ui.fragments.feed.NewsFeedFragment"
        android:label="Новости"
        tools:layout="@layout/fragment_news_feed" >
        <action
            android:id="@+id/action_newsFeedFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
        <action
            android:id="@+id/action_newsFeedFragment_to_newsSearchFragment"
            app:destination="@id/newsSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="com.example.android.unewsapp.ui.fragments.details.NewsDetailsFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_news_details" >
        <argument
            android:name="model"
            app:argType="com.example.android.unewsapp.models.News" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Новость" />

    </fragment>

    <fragment
        android:id="@+id/newsSearchFragment"
        android:name="com.example.android.unewsapp.ui.fragments.search.NewsSearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_news_search" >

    </fragment>
</navigation>